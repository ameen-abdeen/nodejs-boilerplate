    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "typescript-eslint-parser": "^22.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-no-fix && npm test"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "testRegex": ".test.ts$",
    "coverageDirectory": "./coverage",
    "testResultsProcessor": "jest-sonar-reporter",
    "setupFiles": [
