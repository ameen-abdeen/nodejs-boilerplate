    "class-transformer": "^0.2.3",
    "class-validator": "^0.9.1",
    "dotenv": "^8.2.0",
    "envalid": "^5.0.0",
    "express": "^4.17.1",
    "jwt-decode": "^2.2.0",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "morgan": "^1.10.0",
