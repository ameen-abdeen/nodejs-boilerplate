{
  "compilerOptions": {
    "lib": ["es6", "es2017"],
    "sourceMap": true,
    "target": "es2017",
    "outDir": "dist",
    "baseUrl": "src",
    "rootDir": "./",
    "alwaysStrict": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", ".vscode", "dist", "logs", "**/*spec.ts"]
}